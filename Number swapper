
#include <stdio.h>
#include <stdlib.h>

int main(){
   int num1;
   int num2;
   printf("please input the first number");
   scanf("%d", &num1);
   printf("please enter the second number");
   scanf("%d", &num2);
   printf("your first number is %d and your second number is %d\n", num1, num2);
   printf("do you want your numbers swapped?");
   char ans1;
   scanf(" %c", &ans1);
   if(ans1 == 'y'){
       swap(num1, num2);


   }
 
}
 void swap(int x, int y){
     int temp;

     temp = x;
     x    = y;
     y    = temp;

    printf("your first number is %d, and your second number is %d", x, y);

}
